# Configuración de HomeBroker
HB_BROKER=0
HB_DNI=tu_dni_aqui
HB_USER=tu_usuario_aqui
HB_PASSWORD=tu_password_aqui

# Prefijos de opciones (opcional, por defecto usa tickers.json)
HB_OPTIONS_PREFIXES=GFG,GAL

# Prefijos de acciones (opcional, por defecto usa tickers.json)
HB_STOCK_PREFIXES=GGAL,YPFD,PAMP

# Archivo de configuración de tickers (opcional)
HB_TICKERS_FILE=tickers.json

# NOTA: Esta API es completamente pública y no requiere autenticación
# La variable API_TOKEN se ha eliminado para permitir acceso libre
# Si deseas agregar autenticación, modifica api.py y descomenta la verificación de token

# Configuración de reconexión automática (opcional)
HB_RECONNECT_INTERVAL=30
HB_MAX_RECONNECT_ATTEMPTS=5
HB_HEALTH_CHECK_INTERVAL=60